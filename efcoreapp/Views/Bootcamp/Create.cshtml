@model BootcampViewModel

<h2>Bootcamp Ekle</h2>
<hr>
<form asp-controller="Bootcamp" asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>

    <div class="mb-3">
        <label asp-for="Baslik" class="form-label"></label>
        <input asp-for="Baslik" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="OgretmenId" class="form-label">Öğretmen</label>
        <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select">
            <option value="">Seçiniz</option>
        </select>
    </div>
    <button class="btn btn-secondary" type="submit">Kaydet</button>
</form>
    

